@model Recipie

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">Delete Recipie</h2>
            </div>
        </div>
    </div>
    <div class="card-body" p-4>
        <form method="post">
            <div class="border  p-3 mt-4">
                <div class="row pb-2">
  
 
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Ingredients" disabled class="p-0"></label>
                    <input asp-for="Ingredients" class="form-control" />

                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Ingredients" disabled class="p-0"></label>
                    <input asp-for="Ingredients" class="form-control" />

                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="ListPrice" disabled class="p-0"></label>
                    <input asp-for="ListPrice" class="form-control" />

                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Price" disabled class="p-0"></label>
                    <input asp-for="Price" class="form-control" />

                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Price50" disabled class="p-0"></label>
                    <input asp-for="Price50" class="form-control" />

                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Price100" disabled class="p-0"></label>
                    <input asp-for="Price100" class="form-control" />

                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control border-2">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Recipie" asp-action="Index" class="btn btn-outline-secondary form-control">
                            Back To List
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>



@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}